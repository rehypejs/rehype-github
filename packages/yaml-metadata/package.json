    "Titus Wormer <tituswormer@gmail.com> (https://wooorm.com)"
  ],
  "dependencies": {
    "@types/hast": "^3.0.0",
    "@types/mdast": "^4.0.0",
    "@types/unist": "^3.0.0",
    "mdast-util-from-markdown": "^2.0.0",
    "micromark-util-types": "^2.0.0",
    "yaml": "^2.0.0"
  },
  "description": "remark plugin to show frontmatter as a table",
  "exports": "./index.js",
  "files": [
    "index.d.ts.map",
    "index.d.ts",
    "index.js",
    "lib/"
  ],
  "funding": {
    "type": "opencollective",
    "url": "https://opencollective.com/unified"
  },
  "keywords": [
    "frontmatter",
    "github",
    "markdown",
    "mdast",
    "plugin",
    "remark"
  ],
  "license": "MIT",
  "name": "remark-github-yaml-metadata",
  "prettier": {
    "bracketSpacing": false,
    "singleQuote": true,
    "semi": false,
    "tabWidth": 2,
    "trailingComma": "none",
    "useTabs": false
  },
  "private": true,
  "repository": "rehypejs/rehype-github",
  "scripts": {
    "test-api": "node --conditions development test/index.js",
    "test-coverage": "c8 --100 --reporter lcov -- npm run test-api"
  },
  "sideEffects": false,
  "typeCoverage": {
    "atLeast": 100,
    "strict": true
  },
  "type": "module",
  "version": "0.0.0",
  "xo": {
    "overrides": [
      {
        "files": [
          "**/test/**/*.js"
        ],
        "rules": {
          "no-await-in-loop": "off"
        }
      }
    ],
    "prettier": true,
    "rules": {
      "logical-assignment-operators": "off",
      "unicorn/prefer-string-replace-all": "off"
    }
  }
}
