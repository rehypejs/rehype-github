{
  "name": "rehype-github",
  "version": "0.0.0",
  "private": true,
  "description": "rehype plugins that match how GitHub transforms markdown on their site",
  "license": "MIT",
  "keywords": [],
  "repository": "rehypejs/rehype-github",
  "bugs": "https://github.com/rehypejs/rehype-github/issues",
  "funding": {
    "type": "opencollective",
    "url": "https://opencollective.com/unified"
  },
  "author": "Titus Wormer <tituswormer@gmail.com> (https://wooorm.com)",
  "contributors": [
    "Titus Wormer <tituswormer@gmail.com> (https://wooorm.com)"
  ],
  "type": "module",
  "files": [],
  "workspaces": [
    "packages/break/",
    "packages/color/",
    "packages/dir/",
    "packages/emoji/",
    "packages/heading/",
    "packages/image/",
    "packages/link/",
    "packages/notranslate/",
    "packages/viewscreen-geojson/",
    "packages/viewscreen-mermaid/",
    "packages/viewscreen-stl/",
    "packages/yaml-metadata/",
    "example/viewscreen/"
  ],
  "devDependencies": {
    "@types/jsdom": "^21.0.0",
    "@types/node": "^18.0.0",
    "@types/semver": "^7.0.0",
    "c8": "^7.0.0",
    "control-pictures": "^2.0.0",
    "create-gfm-fixtures": "^1.0.0",
    "hastscript": "^7.0.0",
    "jsdom": "^21.0.0",
    "prettier": "^2.0.0",
    "rehype-parse": "^8.0.0",
    "rehype-raw": "^6.0.0",
    "rehype-stringify": "^9.0.0",
    "remark-cli": "^11.0.0",
    "remark-frontmatter": "^4.0.0",
    "remark-gfm": "^3.0.0",
    "remark-parse": "^10.0.0",
    "remark-preset-wooorm": "^9.0.0",
    "remark-rehype": "^10.0.0",
    "semver": "^7.0.0",
    "type-coverage": "^2.0.0",
    "typescript": "^5.0.0",
    "xo": "^0.56.0"
  },
  "scripts": {
    "prepack": "npm run build && npm run format",
    "build": "tsc --build --clean && tsc --build && type-coverage",
    "format": "remark . -qfo && prettier . -w --loglevel warn && xo --fix",
    "test-api": "npm run --workspaces --if-present test-api",
    "test-coverage": "npm run --workspaces --if-present test-coverage",
    "test": "npm run build && npm run format && npm run test-coverage"
  },
  "prettier": {
    "tabWidth": 2,
    "useTabs": false,
    "singleQuote": true,
    "bracketSpacing": false,
    "semi": false,
    "trailingComma": "none"
  },
  "xo": {
    "prettier": true,
    "#": "`n` is wrong",
    "rules": {
      "n/file-extension-in-import": "off"
    },
    "overrides": [
      {
        "files": [
          "**/test/**/*.js"
        ],
        "rules": {
          "no-await-in-loop": 0
        }
      }
    ]
  },
  "remarkConfig": {
    "plugins": [
      "remark-preset-wooorm",
      [
        "remark-lint-no-html",
        false
      ]
    ]
  },
  "typeCoverage": {
    "atLeast": 100,
    "detail": true,
    "strict": true
  }
}
